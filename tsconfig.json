{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/components/*": ["content/components/*"],
      "@/utils/*": ["utils/*"],
      "@/ai/*": ["ai/*"],
      "@/types/*": ["types/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/globals.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}